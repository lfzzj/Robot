<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_size_40">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/text_size_6"
            android:layout_marginTop="@dimen/text_size_15" />

        <TextView
            android:id="@+id/tv_name"
            style="@style/text_style"
            android:layout_centerVertical="true"
            android:textColor="@color/common_color"
            android:layout_marginLeft="@dimen/text_size_40"
            android:textSize="@dimen/text_size_setting_common_func" />
    </RelativeLayout>
</LinearLayout>